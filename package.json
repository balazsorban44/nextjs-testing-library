{
  "name": "@balazsorban44/nextjs-testing-library",
  "version": "0.0.0-semantically-released",
  "description": "(EXPERIMENTAL) Simple Next.js testing utilities that encourage good testing practices.",
  "main": "dist/index.js",
  "module": "dist/@balazsorban44/nextjs-testing-library.esm.js",
  "engines": {
    "node": ">=10.18"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel build:main build:bundle:main build:bundle:pure",
    "build:main": "kcd-scripts build --no-clean",
    "build:bundle:main": "kcd-scripts build --bundle --no-clean",
    "build:bundle:pure": "cross-env BUILD_FILENAME_SUFFIX=.pure BUILD_INPUT=src/pure.js kcd-scripts build --bundle --no-clean",
    "lint": "kcd-scripts lint",
    "test": "kcd-scripts test",
    "test:update": "npm test -- --updateSnapshot --coverage",
    "validate": "kcd-scripts validate",
    "setup": "npm install && npm run validate -s"
  },
  "husky": {
    "hooks": {
      "pre-commit": "kcd-scripts pre-commit"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "nextjs",
    "testing",
    "react",
    "ui",
    "dom",
    "jsdom",
    "unit",
    "integration",
    "functional",
    "end-to-end",
    "e2e"
  ],
  "author": "Balázs Orbán <info@balazsorban.com> (https://balazsorban.com/)",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.8.4",
    "@testing-library/react": "^9.5.0"
  },
  "devDependencies": {
    "@reach/router": "^1.3.3",
    "@testing-library/jest-dom": "^5.1.1",
    "cross-env": "^7.0.1",
    "isomorphic-unfetch": "^3.0.0",
    "kcd-scripts": "^5.4.0",
    "next": "^9.3.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "rimraf": "^3.0.2"
  },
  "peerDependencies": {
    "next": ">= 9.3.0",
    "react": "*",
    "react-dom": "*"
  },
  "eslintConfig": {
    "extends": "./node_modules/kcd-scripts/eslint.js",
    "rules": {
      "react/prop-types": "off",
      "react/no-adjacent-inline-elements": "off",
      "import/no-unassigned-import": "off",
      "import/named": "off",
      "no-trailing-spaces": "error"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "dist",
    "*.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/balazsorban44/nextjs-testing-library"
  },
  "bugs": {
    "url": "https://github.com/balazsorban44/nextjs-testing-library/issues"
  },
  "homepage": "https://github.com/balazsorban44/nextjs-testing-library#readme"
}
